						{
							"key": "password",
							"value": "change123",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "user_credentials",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{url}}/backend/token",
					"host": [
						"{{url}}"
					],
					"path": [
						"backend",
						"token"
					]
				}
			},
			"response": []
